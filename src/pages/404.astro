---
import "@styles/global.css";
import ROUTES from "@/NavRoutes";
---

<div
  class="from-primary flex h-screen items-center justify-center bg-gradient-to-b to-white"
>
  <div
    class="container mx-auto flex flex-col items-center justify-center text-center"
  >
    <h1 class="text-text-primary mb-4 text-8xl font-bold">404</h1>
    <h2 class="text-text-primary mb-2 text-4xl font-semibold">
      Page Not Found
    </h2>
    <p class="text-text-secondary mb-6 text-2xl">
      Sorry, the page you are looking for does not exist.
    </p>
    <a
      href={ROUTES.home.path}
      class="bg-accent hover:bg-accent-hover inline-block rounded-lg p-3 text-xl text-white transition-colors"
    >
      Go to Home
    </a>
  </div>
</div>
