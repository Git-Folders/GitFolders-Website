---
import { FAQs as faqs, type FAQ } from "./Components/FAQs.tsx";
---

<section
  id="faqs"
  class="cursor-default bg-slate-950 px-4 pt-6 pb-20 md:px-16 md:pt-20"
>
  <div class="mx-auto max-w-7xl space-y-10">
    <h2 class="text-center text-4xl font-bold text-slate-50">
      Frequently Asked Questions
    </h2>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      {
        faqs.map((faq: FAQ) => (
          <div class="group rounded-xl border border-gray-700 p-6 text-slate-50 hover:border-blue-600">
            <h3 class="text-xl font-semibold group-hover:text-blue-400">
              {faq.question}
            </h3>
            <p class="mt-2 text-base text-gray-300">{faq.answer}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
