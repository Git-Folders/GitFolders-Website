---
import ROUTES from "@/NavRoutes";
import NAME from "@/Name";
import Logo from "@/assets/logo.svg";
import SignoutButton from "./SignoutButton";

type Props = {
  isDashboardPage?: boolean;
};

const isDashboardPage = Astro.props.isDashboardPage ?? false;
---

<nav
  class="bg-secondary/70 fixed top-0 z-50 flex h-16 w-full items-center justify-between rounded-b-md px-4 shadow-sm backdrop-blur-md md:px-16"
>
  <!-- Logo Container -->
  <a href={ROUTES.home.path}>
    <div class="flex cursor-pointer items-center gap-x-2">
      <img
        src={Logo.src}
        alt="GitFolders Logo"
        class="size-10"
        loading="lazy"
      />

      <span class="text-text-primary text-lg font-semibold">{NAME}</span>
    </div>
  </a>
  <!-- Nav options Container -->
  <div class="flex items-center gap-x-2">
    {!isDashboardPage ?(<a
      href={ROUTES.login.path}
      class="border-accent hover:border-accent-hover cursor-pointer rounded-lg border-2 px-3 py-2 font-medium text-accent hover:text-accent-hover dark:text-text-primary hover:dark:text-text-secondary transition-all"
    >
      {ROUTES.login.name}
    </a>
    <a
      href={ROUTES.signup.path}
      class="bg-accent hover:bg-accent-hover cursor-pointer rounded-lg px-3 py-2 font-medium text-white transition-all"
    >
      {ROUTES.signup.name}
    </a>
    ):(
    <SignoutButton client:visible/>
    )}
  </div>
</nav>
