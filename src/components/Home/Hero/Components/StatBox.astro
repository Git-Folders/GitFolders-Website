---
export type Stat = {
  value: string;
  label: string;
};
const { value, label } = Astro.props as Stat;
---

<div class="group text-center">
  <div
    class="text-3xl font-bold text-blue-600 transition-transform group-hover:-translate-y-1.5"
  >
    {value}
  </div>
  <div class="text-sm font-medium text-slate-100">{label}</div>
</div>
