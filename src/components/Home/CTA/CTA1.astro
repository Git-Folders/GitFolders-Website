---
import CTA_BG1 from "@assets/CTA/CTA_BG1.jpg";

import { CTA_Link } from "@/NavRoutes";

import { ArrowRight } from "@utils/Icons";

const bgImage = CTA_BG1.src;
---

<section
  id="cta-1"
  class="relative cursor-default overflow-hidden bg-blue-600 px-4 pt-6 pb-20 text-slate-50 md:px-16 md:pt-20"
>
  <div class="pointer-events-none absolute inset-0 opacity-10">
    <div
      style={{ backgroundImage: `url(${bgImage})` }}
      class={`absolute inset-0 bg-cover bg-center`}
    >
    </div>
  </div>
  <div class="relative z-10 mx-auto flex max-w-4xl flex-col px-4 text-center">
    <h2 class="mb-6 text-4xl font-bold">
      Ready to organize your GitHub repositories?
    </h2>
    <p class="mb-10 text-xl text-balance opacity-90">
      Join like minded community of developers who are already enjoying a
      cleaner, more organized GitHub experience.
    </p>
    <a
      href={CTA_Link.path}
      class="group text-accent z-50 flex cursor-pointer items-center gap-x-2 self-center rounded-lg bg-slate-50 px-5 py-4 text-lg font-semibold text-blue-600 transition-colors hover:text-blue-800 md:px-8"
    >
      {CTA_Link.name}
      <ArrowRight
        className="h-5 w-5 transition-transform group-hover:translate-x-2"
      />
    </a>
  </div>
</section>
