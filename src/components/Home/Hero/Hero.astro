---
import { Image } from "astro:assets";
import { CTA_Link } from "@/NavRoutes.ts";

import { ArrowRight, Folder } from "@utils/Icons.tsx";

// TODO: Enable when required
/* import TrustMetric from "./componentsTrustMetric.astro";
import UserMetric from "./componentsUserMetric.astro"; */

import StatBox, { type Stat } from "./Components/StatBox.astro";

const stats: Stat[] = [
  { value: "3x", label: "Fewer Clicks" },
  { value: "50%", label: "Increased Productivity" },
  { value: "2x", label: "Less Search Time" },
  // { value: "75%", label: "Time Saved" },
  // { value: "90%", label: "Faster Navigation" },
  // { value: "1-Click", label: "Smart Folder Creation" },
];

const heroImage = {
  url: "https://images.unsplash.com/photo-1630514969818-94aefc42ec47?auto=format&fit=crop&w=800&q=80",
  //  "https://images.unsplash.com/photo-1618477388954-7852f32655ec"
  alt: "Dashboard preview",
} as const;
---

<section
  class="bg-primary flex min-h-screen cursor-default items-center justify-center px-4 py-20 md:px-16"
>
  <div class="mx-auto grid max-w-7xl items-center gap-12 md:grid-cols-2">
    <div class="text-left text-balance">
      {/* <TrustMetric /> */}
      <h1
        class="text-text-primary mb-6 text-5xl leading-tight font-bold md:text-6xl"
      >
        Organize GitHub <span class="text-accent">Repositories</span> Like Never
        Before
      </h1>
      <p class="text-text-secondary mb-8 text-xl">
        Transform cluttered repositories into a streamlined, organized
        workspace. The missing folder structure for your GitHub repositories.
      </p>
      <div class="flex items-center gap-x-4">
        <a
          href={CTA_Link.path}
          class="group bg-accent hover:bg-accent-hover flex cursor-pointer items-center gap-x-2 rounded-lg px-5 py-4 text-lg font-semibold text-white transition-colors md:px-8 md:py-4"
        >
          <span>{CTA_Link.name}</span>
          <ArrowRight
            className="h-5 w-5 transition-transform group-hover:translate-x-2"
          />
        </a>
        {/* <UserMetric /> */}
      </div>
      <div class="mt-8 grid w-fit grid-cols-3 gap-8">
        {stats.map((stat) => <StatBox value={stat.value} label={stat.label} />)}
      </div>
    </div>
    <div class="relative h-full">
      <div
        class="relative h-[50vh] w-full overflow-hidden rounded-lg shadow-2xl md:h-[100vh]"
      >
        <Image
          src={heroImage.url}
          alt={heroImage.alt}
          class="h-full w-full scale-125 object-cover"
          width={1000}
          height={1000}
          loading="eager"
        />
      </div>
      <div
        class="bg-primary shadow-secondary border-secondary absolute -bottom-6 -left-2 flex items-center gap-x-3 rounded-lg border-1 p-3 shadow-2xl md:-left-6 md:p-4"
      >
        <Folder className="text-accent h-10 w-10" />
        <div>
          <p class="text-text-primary font-semibold">Smart Organization</p>
          <p class="text-text-secondary text-sm">Like Never Before</p>
        </div>
      </div>
    </div>
  </div>
</section>
