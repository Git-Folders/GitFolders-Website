---
import FormContainer from "@components/FormComponents/FormContainer.astro";
import FormHeader from "@components/FormComponents/FormHeader.astro";
import Form from "./components/Form.tsx";
import ROUTES from "@/NavRoutes";
---

<FormContainer>
  <FormHeader
    title="Login to GitFolders"
    description="Access your repositories with ease."
  />
  <Form client:visible />
  <p class="text-text-secondary mt-4 text-sm">
    {"Don't have an account?"}
    <a href={ROUTES.signup.path} class="text-accent hover:underline"
      >Register here</a
    >
  </p>
</FormContainer>
