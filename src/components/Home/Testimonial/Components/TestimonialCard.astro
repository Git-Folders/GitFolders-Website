---
import { Quote } from "@utils/Icons";
import type { Testimonial } from "./Testimonials";

export type TestimonialCardProps = {
  testimonial: Testimonial;
};
const { testimonial } = Astro.props as TestimonialCardProps;
const { message, name } = testimonial;
---

<div
  class="relative max-w-48 min-w-48 space-y-3 rounded-2xl border border-blue-700 bg-gradient-to-b from-blue-950 via-blue-900 to-blue-950 px-6 py-3 transition not-hover:shadow-none hover:shadow-lg hover:shadow-blue-600/30 md:max-w-80 md:min-w-80 md:space-y-4 md:py-6"
>
  <Quote className="h-5 w-5 text-blue-400 opacity-70" />

  <p class="text-base leading-relaxed text-slate-50">
    “{message}”
  </p>

  <div
    class="absolute right-4 -bottom-4 rounded-md bg-blue-800 px-2 py-1 text-sm font-semibold tracking-wider text-blue-300 uppercase shadow-sm ring-1 ring-blue-700/30 ring-inset"
  >
    — {name}
  </div>
</div>
