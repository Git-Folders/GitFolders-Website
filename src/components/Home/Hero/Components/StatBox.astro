---
export type Stat = {
  value: string;
  label: string;
};
const { value, label } = Astro.props as Stat;
---

<div class="group text-center">
  <div
    class="text-2xl font-bold text-blue-600 transition-transform group-hover:-translate-y-1.5 md:text-3xl portrait:sm:text-3xl"
  >
    {value}
  </div>
  <div
    class="text-xs font-medium text-slate-50 italic md:text-sm portrait:sm:text-sm"
  >
    {label}
  </div>
</div>
