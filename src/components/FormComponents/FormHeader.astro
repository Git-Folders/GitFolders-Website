---
export type FormHeaderProps = {
  title: string;
  description: string;
};
const { title, description } = Astro.props as FormHeaderProps;
---

<div class="space-y-4 text-center">
  <h2 class="text-text-primary text-4xl font-bold">{title}</h2>
  <p class="text-text-secondary text-lg text-pretty">
    {description}
  </p>
</div>
