---
type FooterLink = { href: string; label: string };
const footerLinks: FooterLink[] = [
  { href: "/privacy-policy", label: "Privacy Policy" },
  { href: "/terms-of-service", label: "Terms of Service" },
  { href: "/refund-policy", label: "Refund Policy" },
];
---

<footer
  class="flex w-full flex-col-reverse items-center gap-8 border-t border-blue-600 bg-neutral-950 px-4 py-8 text-slate-50 sm:flex-row md:justify-between md:px-8 md:py-10"
  aria-label="Site footer"
>
  <p class="text-[10px] select-none md:text-xs">
    Â© 2025 GitFolders. All rights reserved.
  </p>

  <nav
    aria-label="Footer navigation"
    class="ml-auto flex w-full items-center justify-between gap-4 px-2 sm:w-auto"
  >
    {
      footerLinks.map((link) => (
        <a
          href={link.href}
          class="text-center text-xs hover:underline md:text-sm"
        >
          {link.label}
        </a>
      ))
    }
  </nav>
</footer>
