---
import "@styles/global.css";
import ROUTES from "@/NavRoutes";
import Footer from "@/components/Footer.astro";

type Props = {
  title?: string;
  description?: string;
};
const {
  title = "GitFolders",
  description = "GitFolders helps you organize GitHub repositories into custom folders, making it easier to manage your projects. GitFolders also supports cloud syncing.",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Kanishka Chandra" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
  </head>
  <body>
    <div
      class="flex h-screen items-center justify-center bg-gradient-to-t from-slate-950 to-black"
    >
      <div
        class="container mx-auto flex max-w-2xl flex-col items-center justify-center text-center"
      >
        <slot />
        <a
          href={ROUTES.home.path}
          class="inline-block rounded-lg bg-blue-600 p-3 text-xl text-slate-100 transition-colors hover:bg-blue-800"
        >
          Go to Home
        </a>
      </div>
    </div>
    <Footer />
  </body>
</html>
