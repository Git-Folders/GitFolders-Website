---
import ErrorPageLayout from "@layouts/ErrorPageLayout.astro";
---

<ErrorPageLayout title="500 - An Error Occurred">
  <div
    class="bg-gradient-to-t from-neutral-950 to-black px-8 py-10 md:px-16 md:py-20"
  >
    <div class="container mx-auto text-center">
      <h1 class="text-8xl font-bold text-slate-50">500</h1>
      <h2 class="mt-4 text-4xl font-medium text-slate-50">
        Oops, Something Went Wrong
        <br />
        <span class="text-xl font-normal text-slate-300"
          >Please try refreshing the page or return to homepage.</span
        >
      </h2>
      <a
        href="/"
        class="mx-auto mt-10 block w-fit rounded-2xl bg-blue-600 px-4 py-4 text-xl font-medium text-slate-50 transition ease-linear hover:bg-blue-800 hover:text-white hover:brightness-75"
      >
        Go to Home
      </a>
    </div>
  </div>
</ErrorPageLayout>
