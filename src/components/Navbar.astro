---
import ROUTES from "@/NavRoutes";
import NAME from "@/Name";
import Logo from "@/assets/32.png";
---

<nav
  class="bg-secondary/70 fixed top-0 z-50 flex h-16 w-full items-center justify-between rounded-b-md px-4 shadow-sm backdrop-blur-md md:px-16"
>
  <!-- Logo Container -->
  <a href={ROUTES.home.path}>
    <div class="flex cursor-pointer items-center gap-x-2">
      <!--   TODO: Logo Goes Here  -->
      <img
        src={Logo.src}
        alt="Gitfolders Logo"
        class="size-10"
        loading="lazy"
      />

      <span class="text-text-primary text-lg font-semibold">{NAME}</span>
    </div>
  </a>
  <!-- Nav options Container -->
  <div class="flex items-center gap-x-2">
    <!-- ! Change waitlit to signup after Launch -->
    <a
      href={ROUTES.waitlist.path}
      class="bg-accent hover:bg-accent-hover cursor-pointer rounded-lg px-3 py-2 font-medium text-white transition-all hover:rounded-md"
    >
      {ROUTES.waitlist.name}
    </a>
  </div>
</nav>
